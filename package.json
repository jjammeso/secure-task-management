{
  "name": "secure-task-management",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build:libs && npm run build:api && npm run build:dashboard",
    "build:api": "npm --workspace api run build",
    "build:dashboard": "npm --workspace dashboard run build",
    "build:libs": "tsc -b libs/data libs/auth",
    "test:api": "npm --workspace api run test",
    "dev:api": "npm --workspace api run dev",
    "dev:dashboard": "npm --workspace dashboard run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "start:api": "npm --workspace api run start",
    "start:dashboard": "npm --workspace dashboard run start",
    "start": "concurrently \"npm run start:api\" \"npm run start:dashboard\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjammeso/secure-task-management.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jjammeso/secure-task-management/issues"
  },
  "homepage": "https://github.com/jjammeso/secure-task-management#readme",
  "dependencies": {
    "@tanstack/react-query": "^5.90.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}